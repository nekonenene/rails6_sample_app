h1 = t(:list, model: t("activerecord.models.article"))
.row
  .col.s12
    table
      tr
        th
          = Article.human_attribute_name :id
        th
          = Article.human_attribute_name :title
        th
          = Article.human_attribute_name :body
        th
      - @articles.each do |article|
        tr
          td
            = article.id
          td
            = article.title
          td
            = article.body
          td
            = link_to "Show", article_path(article), class: "waves-effect waves-light btn"
.row
  .col.s12
    = link_to "New", new_article_path, class: "waves-effect waves-light btn"
