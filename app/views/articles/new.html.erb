<h1><%= t(:new, model: t("activerecord.models.article")) %></h1>

<div class="row">
  <%= form_with model: @article, local: true, class: "col s12" do |form| %>
    <div class="row">
      <div class="input-field col s12">
        <%= form.label :title %>
        <%= form.text_field :title, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.label :body %>
        <%= form.text_area :body, required: true, class: "materialize-textarea" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.submit class: "btn waves-effect waves-light white-text" %>
      </div>
    </div>
  <% end %>
</div>
